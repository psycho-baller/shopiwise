{
	"name": "shopiwise",
	"displayName": "Shopiwise - Shop wisely",
	"version": "0.0.1",
	"description": "Only buy what you need",
	"author": "Rami <rami.rami@ucalgary.ca> (ramimaalouf.tech)",
	"license": "MIT",
	"homepage_url": "https://github.com/psycho.baller/shopiwise",
	"contributors": [
		"Rami <rami.rami@ucalgary.ca> (ramimaalouf.tech)"
	],
	"packageManager": "pnpm@8.6.9",
	"scripts": {
		"dev": "plasmo dev",
		"build": "plasmo build"
	},
	"dependencies": {
		"@plasmohq/storage": "^1.9.0",
		"plasmo": "^0.84.0",
		"svelte": "^4.2.3",
		"svelte-french-toast": "^1.2.0",
		"svelte-preprocess": "^5.1.0"
	},
	"devDependencies": {
		"@types/chrome": "^0.0.237",
		"@types/node": "^20.9.0",
		"@types/webextension-polyfill": "^0.10.6",
		"autoprefixer": "^10.4.16",
		"eslint-config-custom": "workspace:0.0.0",
		"postcss": "^8.4.31",
		"tailwind-config": "workspace:0.0.0",
		"tailwindcss": "^3.3.5",
		"typescript": "^5.2.2",
		"webextension-polyfill": "^0.10.0"
	},
	"manifest": {
		"host_permissions": [
			"https://www.amazon.ca/*",
			"https://www.amazon.com/*"
		],
		"permissions": [
			"storage",
			"tabs",
			"clipboardWrite"
		],
		"commands": {
			"toggle-recording": {
				"suggested_key": {
					"default": "Ctrl+Shift+X",
					"mac": "Command+Shift+X"
				},
				"description": "Toggle recording"
			}
		}
	}
}